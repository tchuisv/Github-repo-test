pipeline{
    agent any
    
    stages{
        stage ('git link'){
            steps {
                
                git branch: 'main',
                    url: 'https://github.com/tchuisv/Github-repo-test.git'
            }
        }
        stage ('maven build'){
            steps {
                sh 'mvn compile'
            }
        }
        stage ('Maven test') {
            steps {
               sh 'mvn test' 
            }
        }
        stage ('maven package') {
            steps {
                sh 'mvn clean package'
            }
        }
        
    }
}




